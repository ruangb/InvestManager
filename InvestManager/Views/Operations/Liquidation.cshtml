@model IEnumerable<InvestManager.Models.Operation>
@{
    ViewData["Title"] = "Liquidação";
}

<h2>@ViewData["Title"]</h2>

<div class="col-md-12">
    <div class="form-group">
        <div class="col-md-8"></div>
        <div class="col-md-4">
            <h5>@ViewBag.RentabilityTotal</h5>
        </div>
    </div>
</div>


<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Asset)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.RentabilityValue)</th>
            <th>@Html.DisplayNameFor(model => model.RentabilityPercentage)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Asset)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RentabilityValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RentabilityPercentage)
                </td>
            </tr>
        }
    </tbody>
</table>

