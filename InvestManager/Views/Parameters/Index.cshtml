@model IEnumerable<InvestManager.Models.Parameter>

@{
    ViewData["Title"] = "Parâmetros";
}

<br />
<br />

<a asp-action="Create" class="btn btn-default btn-sm">Cadastrar Parâmetros</a>

<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.TradingFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LiquidityFee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TradingFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LiquidityFee)
                </td>
                <td style="text-align:center">
                    <button type="submit" class="btn btn-default btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                    <button type="submit" class="btn btn-success btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                    <button type="submit" class="btn btn-danger btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
