@model IEnumerable<InvestManager.Models.Operation>

@{
    ViewData["Title"] = "Operações";
}
<br />

<p>
    <a asp-action="Create" class="btn btn-default btn-sm">Nova Operação</a>
</p>

<table class="table table-striped table-hover" id="dataTable">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Asset)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.Label("Total")</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Asset)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvestValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td style="text-align:center">
                    <button type="submit" class="btn btn-default btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                    <button type="submit" class="btn btn-success btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                    <button type="submit" class="btn btn-danger btn-xs" style="color:white; margin-left: 4px; margin-right: 4px;">
                        @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @style = "color:#ffffff;" })
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

