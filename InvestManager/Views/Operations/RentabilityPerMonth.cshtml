@model InvestManager.Models.Operation
@{
    ViewData["Title"] = "Rentabilidade por Mês";
}
<br />

<div class="col-md-12">
    <div class="form-group">
        <div class="col-md-8"></div>
        <div class="col-md-4">
            <h5>@ViewBag.RentabilityTotal</h5>
        </div>
    </div>
</div>

<form asp-action="RentabilityPerMonth" style="padding-bottom:70px">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group-sm">
        <div class="col-md-1">
            <label asp-for="ReferenceMonth" class="control-label"></label>
        </div>
        <div class="col-md-2">
            <select asp-for="ReferenceMonth" class="form-control" asp-items="@(new SelectList(Model.Months, Model.ReferenceMonth))">
                <option selected="selected" value="">Selecione uma opção</option>
            </select>
            <span asp-validation-for="ReferenceMonth" class="text-danger"></span>
        </div>
        <div class="col-md-1">
        </div>
        <div class="col-md-1">
            <label asp-for="ReferenceYear" class="control-label"></label>
        </div>
        <div class="col-md-2">
            <select asp-for="ReferenceYear" class="form-control" asp-items="@(new SelectList(Model.Years, Model.ReferenceYear))">
                <option selected="selected" value="">Selecione uma opção</option>
            </select>
            <span asp-validation-for="ReferenceYear" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-default btn-sm" value="Visualizar" />
        </div>
    </div>
</form>
<table class="table table-striped table-hover" id="dataTable">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Asset)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.RentabilityValue)</th>
            <th>@Html.DisplayNameFor(model => model.RentabilityPercentage)</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Operations.Count; i++)
        {
            <tr>
                <td>
                    @Model.Operations[i].Asset
                </td>
                <td>
                    @Model.Operations[i].Quantity
                </td>
                <td>
                    @string.Format("{0:N2}", Model.Operations[i].RentabilityValue)
                </td>
                <td>
                    @string.Format("{0:P2}", Model.Operations[i].RentabilityPercentage)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

